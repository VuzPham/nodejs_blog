<div>
  <h2>Đăng khóa học</h2>

  <form method="POST" action="/courses/store">
    <div class="mb-3">
      <label for="courseName" class="form-label">Name</label>
      <input
        type="text"
        class="form-control"
        id="courseName"
        name="name"
        placeholder="Nhập tên khóa học"
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <input
        type="text"
        class="form-control"
        id="description"
        name="description"
        placeholder="Nhập mô tả khóa học"
      />
    </div>
    <div class="mb-3">
      <label for="video / ImageID" class="form-label">Video ID</label>
      <input
        type="text"
        class="form-control"
        id="video"
        name="video"
        placeholder="Nhập ID video"
      />
    </div>

    <div class="mb-3">
      <label for="level" class="form-label">Level</label>
      <select
        class="form-select"
        name="level"
        id="level"
        aria-label="Default select example"
      >
        <option value="1">Dễ</option>
        <option value="2">Trung bình</option>
        <option value="3">Khó</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>